<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>
  <div class="container">
    <hr>
  <h2>Categorias:</h2>
  <a class="btn btn-success" href="/admin/article/new">Criar artigo</a>
  <hr>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Slug</th>
        <th>Categoria</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% articles.forEach((article) => { %>
        <tr>
          <td><%=article.id %></td>
          <td><%=article.title %></td>
          <td><%=article.slug %></td>
          <td><%=article.category.title %></td>
          <td>
            <a href="" class="btn btn-warning">Editar</a>

            <form method="post" action="/articles/delete" style="display: inline;" onsubmit="deleteConfirm(event, this)">
            <input type="hidden" name="id" value="<%=article.id%>" style="display: inline;" >
            <button class="btn btn-danger">Deletar</button>

            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  </div>
<%- include("../../partials/footer.ejs") %>

<script>
  function deleteConfirm(event, form){
    event.preventDefault()
    var decision = confirm("Deseja deletar esse artigo?")
    if(decision){
      form.submit()
    }
  }
</script>