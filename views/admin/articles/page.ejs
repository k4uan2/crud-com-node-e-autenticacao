<%- include ("../../partials/header.ejs") %>
<body>
  <%- include ("../../partials/homenavbar.ejs") %>
  
 

  <div class="container">

    <% result.articles.rows.forEach((article) => { %>
        <br>
        <div class="card-header">
          <h1 class="font-weight-bold"><%= article.title %></h1>      
        </div> 
        <div class="card-body">
          <a href="/<%=article.slug %>" class="btn btn-primary">Leia</a>
        </div>
      <% }) %>


      <div class="row">
        <div class="col col-12">

          <%if(result.page > 2){ %>
            <a style="float: left;" href="/articles/page/<%= result.page - 1 %>"> << back </a>
          <%}else if(result.page == 2) { %>
            <a style="float: left;" href="/"> << back </a>
          <% } %>

        

          <% if(result.next) { %>
            <a style="float: right;" href="/articles/page/<%= result.page + 1 %>">Next >></a>
          <%} %>

        </div>
        <hr>
      </div>

  </div>
  
</body>
<%- include ("../../partials/footer.ejs") %>